.PHONY: lint ktlint format commit commit-force
lint:
	./gradlew lint

ktlint:
	./gradlew ktlintCheck

format:
	./gradlew ktlintFormat

commit:
	bash scripts/android-smart-commit.sh

commit-force:
	bash scripts/android-smart-commit.sh --force

